{
  "compileOnSave": true,
  "compilerOptions": {
    "declaration": false,
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitAny": false,
    "outDir": "./dist",
    "baseUrl": "./dist",
    "preserveConstEnums": true,
    "removeComments": false,
    "pretty": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "sourceMap": true,
    "target": "es6",
    "skipLibCheck": true,
		"lib":[
			"es2017",
			"es7"
		]
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "test/.compiled",
    "typings",
    "testdist"
  ],
  "filesGlob": [
    "typings/index.d.ts",
    "src/**/*.ts"
  ],
  "atom": {
    "rewriteTsconfig": true
  }
}